

<%=form_for @template, :html => {:id => @template.id.to_s + "-form"},  :class => "form-inline", remote: true do |f| %>

<div class="form-group">
  <%= f.label :title%>
  <%= f.text_field :title, :class => "form-control" %>
</div>
<div class="form-group">
  <%= f.label :description%>
  <%= f.text_area :description, :class => "form-control" %>
</div>
<fieldset class="form-group row">
  <div class="col-sm-11 col-sm-offset-1">
    <p>Categories</p>
    <% @categories.each do |cat|%>
      <div class="form-check">
        <% if @template.category_id == cat.id%>
          <%= radio_button_tag(:category_id, cat.id, checked = true)%>
          <%= label_tag(:category, cat.name)%>
        <% else %>
          <%= radio_button_tag(:category_id, cat.id)%>
          <%= label_tag(:category, cat.name)%>
        <% end %>
      </div>
    <% end %>
  </div>
</fieldset>
  <%= f.submit :class => "btn btn-success" %>
<%end%>
